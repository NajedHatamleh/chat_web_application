<%= stylesheet_link_tag 'regestration/style', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="main">
        <!-- Sign up form -->
        <section class="signup">
            <div class="container">
                <div class="signup-content">
                    <div class="signup-form">
                        <h2 class="form-title">Sign up</h2>
													<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  													<%= render "devise/shared/error_messages", resource: resource %>
                            <div class="form-group">
														<label for="email"> <i class="fa fa-envelope"></i></label><br />
   														<%= f.email_field :email, autofocus: true, placeholder: "Your Email",  autocomplete: "email" %>
														</div>
                            <div class="form-group">
														<label for="name"><i class="fa fa-user"></i></label><br />
   													  <%= f.text_field :username, required: true, placeholder: "Your User Name"  %>
                            </div>
                            <div class="form-group">
                              <label for="your_password"><i class="fa fa-lock"></i></label>
    													<% if @minimum_password_length %>
    													<em>(<%= @minimum_password_length %> characters minimum)</em>
    													<% end %><br />
    													<%= f.password_field :password, placeholder: "Password", autocomplete: "new-password" %>
                            </div>
                            <div class="form-group">
														 <label for="re-pass"><i class="fa fa-lock"></i></label><br />
   														 <%= f.password_field :password_confirmation, placeholder: "Repeat your password", autocomplete: "new-password" %>
                            </div>
                            <div class="form-group form-button">
                                <%= f.submit "Sign up", class: "form-submit" %>
                            </div>
                        </form>
                    </div>
                    <div class="signup-image">
                        <figure><img src=<%= image_path('signup-image') %> alt="sing up image"></figure>
                        <a href= <%= new_user_session_path %> class="signup-image-link font-weight-bold">I am already member</a>
                    </div>
                </div>
            </div>
        </section>
			<% end %>
